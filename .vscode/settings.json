{
	// üîß Automatically format files on save
	"editor.formatOnSave": true,

	// üîß Automatically format pasted code
	"editor.formatOnPaste": true,

	// üîß Biome extension configuration
	"biome.enabled": true,

	// üì¶ Force auto-imports to use aliases (e.g. "@/..." instead of relative paths like "../../../")
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"javascript.preferences.importModuleSpecifier": "non-relative",

	// ‚ö° Settings for JavaScript files
	"[javascript]": {
		// Use Prettier as the default formatter
		"editor.defaultFormatter": "biomejs.biome",
		// Actions applied automatically on save
		"editor.codeActionsOnSave": {
			// Organize imports automatically (sort and remove unused)
			"source.organizeImports.biome": "always",
			// Apply quick fixes like removing unused variables
			"source.fixAll.biome": "always"
		}
	},

	// ‚ö° Settings for TypeScript files
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.organizeImports.biome": "always",
			"source.fixAll.biome": "always"
		}
	},

	// üåê Enforce Prettier for JSON, HTML, and CSS as well
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[html]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[css]": {
		"editor.defaultFormatter": "biomejs.biome"
	}
}
